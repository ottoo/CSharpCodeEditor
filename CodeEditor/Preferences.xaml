    <Grid>
        <TextBox x:Name="TextBox1" HorizontalAlignment="Left" Height="23" Margin="10,39,0,0" Text="" VerticalAlignment="Top" Width="151" VerticalScrollBarVisibility="Auto"/>
        <Button Content="Browse" HorizontalAlignment="Left" Margin="194,44,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Label Content="Set your csc.exe path for compiling." HorizontalAlignment="Left" Margin="10,8,0,0" VerticalAlignment="Top" Width="231" FontSize="10"/>
